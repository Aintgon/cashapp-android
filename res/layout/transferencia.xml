<?xml version="1.0" encoding="utf-8"?>
  <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scrollView1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="0.42"
      android:background="#c51f50" >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c51e4f"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Para:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <AutoCompleteTextView
        android:id="@+id/inputPara"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.32"
        android:dropDownHeight="100dp"
        android:ems="9"
         android:background="@drawable/edit_text_design"
        android:hint="alguien@example.com"
        android:includeFontPadding="false"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="textEmailAddress"
         android:imeOptions="actionNext"
        android:scrollHorizontally="true" >

        <requestFocus />
    </AutoCompleteTextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Cantidad:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/inputCantidad"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
         android:background="@drawable/edit_text_design"
                 android:textColor="#fff"
        android:textColorHint="#fff"
        android:ems="9"
        android:hint="$"
        android:imeOptions="actionNext"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Concepto:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/concept"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.32"
        android:ems="9"
        android:hint="opcional"
        android:includeFontPadding="false"
         android:background="@drawable/edit_text_design"
                 android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="text"
        android:maxLength="20"
        android:scrollHorizontally="true" />

    <Button
        android:id="@+id/enviar"
        android:layout_width="109dip"
        android:layout_height="74dip"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:background="@drawable/benviar" />

</LinearLayout>
</ScrollView>