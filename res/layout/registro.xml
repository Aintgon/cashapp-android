<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/pin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.02"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="Registro"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="378dp"
            android:layout_weight="0.42"
            android:background="#c51f50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
               android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        

                        <EditText
                            android:id="@+id/nombre_registro"
                            android:background="@drawable/edit_text_design"
                             android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="Nombre"
                            android:textColor="#ffffff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:inputType="text"
                            android:singleLine="true"
                             android:imeOptions="actionNext"
                            android:ems="10"
                           
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        
                        <EditText
                            android:id="@+id/apellido_registro"
                            android:background="@drawable/edit_text_design"
                            android:textColor="#ffffff"
                             android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="Apellido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                              android:inputType="text"
                              android:singleLine="true"
                            android:layout_marginRight="10dp"
                            android:imeOptions="actionNext"
                            android:ems="10" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    

                    <EditText
                        android:id="@+id/mail_registro"
                        android:background="@drawable/edit_text_design"
                        android:textColor="#ffffff"
                         android:layout_marginTop="30dp"
                            android:textColorHint="#ffffff"
                            android:hint="Correo electrónico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                       android:imeOptions="actionNext"
                       android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:ems="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:orientation="vertical" >

                    
                    <EditText
                        android:id="@+id/date"
                        android:background="@drawable/edit_text_design"
                        android:textColor="#ffffff"
                         android:layout_marginTop="30dp"
                          android:textColorHint="#ffffff"
                          android:hint="Fecha de nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                         android:inputType="date"
                         android:singleLine="true"
                        android:layout_marginRight="10dp"
                        android:imeOptions="actionNext"
                        android:ems="10" >

                        
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                   
                    <EditText
                        android:id="@+id/telefono_registro"
                        android:background="@drawable/edit_text_design"
                        android:textColor="#ffffff"
                        
                          android:textColorHint="#ffffff"
                          android:hint="teléfono"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                         android:inputType="phone"
                         android:singleLine="true"
                         android:imeOptions="actionDone"
                        android:layout_marginRight="10dp"
                        android:ems="10" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:background="#ffffff" >

<Button
    android:id="@+id/aceptar_r"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ccbg"
    android:text="Aceptar"
    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/iniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ccbg"
                    android:text="Cancelar"
                    android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>