<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
      	   android:layout_weight="0"
            android:background="#ffffff" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgmark"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/datosw" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.04"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/enlaceq" />

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="378dp"
            android:layout_weight="0.42"
            android:background="#c51f50" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
               android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="Enlaza tu Celular"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="209dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/correo_i"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/edit_text_design"
                            android:ems="10"
                            android:hint="Correo Electrónico"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="#ffffff"
                            android:textColorHint="#ffffff" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <Button
                        android:id="@+id/codigoAcceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enviar código de acceso" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
                
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:orientation="vertical" >
                    
                     
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >

                         <EditText
                             android:id="@+id/contrasenia"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:layout_marginTop="30dp"
                             android:background="@drawable/edit_text_design"
                             android:ems="10"
                             android:hint="Código de acceso"
                             android:imeOptions="actionNext"
                             android:inputType="text"
                             android:password="true"
                             android:singleLine="true"
                             android:textColor="#ffffff"
                             android:textColorHint="#ffffff" >

                            
                         </EditText>
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >

                         <EditText
                             android:id="@+id/pin_i"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:layout_marginTop="30dp"
                             android:background="@drawable/edit_text_design"
                             android:ems="10"
                             android:hint="PIN"
                             android:imeOptions="actionNext"
                             android:inputType="phone"
                             android:password="true"
                             android:singleLine="true"
                             android:textColor="#ffffff"
                             android:textColorHint="#ffffff" >

                            
                         </EditText>
                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" >

                         <EditText
                             android:id="@+id/pin_dos"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:layout_marginTop="30dp"
                             android:layout_marginBottom="30dp"
                             android:background="@drawable/edit_text_design"
                             android:ems="10"
                             android:hint="Confirmar pin"
                             android:imeOptions="actionDone"
                             android:inputType="phone"
                             android:maxLength="4"
                             android:password="true"
                             android:singleLine="true"
                             android:textColor="#ffffff"
                             android:textColorHint="#ffffff" />
                     </LinearLayout>
                 </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="0"
            android:orientation="horizontal"
            android:background="#ffffff" >

		<Button
		    android:id="@+id/aceptar_r"
		    android:layout_width="160dp"
		    android:layout_height="wrap_content"
		    android:background="@drawable/fondo_acept_cancel"
		    android:text="Enlazar celular"
		    android:textColor="#ffffff" />

       	<Button
           android:id="@+id/iniciar"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/fondo_acept_cancel"
           android:text="Cancelar"
           android:textColor="#ffffff" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>